.dropdown
  position relative
  max-width 500px
  width 100%
  margin 0 auto
  z-index 2
  text-align left
  &__wrapper
    margin 40px 0 0
  &__toggle 
    transition 0.5s
    cursor pointer
    .dropdown
      &__item
        &:after
          content ''
          position absolute
          top 51%
          right 30px
          width 12px
          height 8px
          background-image url(../img/arrow.png)
  &__list
    margin 0
    padding 0
    list-style-type none
    transform perspective(400px) rotateX(-90deg)
    transform-origin top
    transition 0.5s
    background $blue
    position absolute
    width 100%
  &.active
    .dropdown
      &__toggle
        color $blue
      &__list 
        transform rotate(0)
  &__item
    background $blue
    color #ffffff
    border-radius 5px
    padding 10px 18px 11px 18px
    transition all .3s ease
    cursor pointer
    position relative
    &:hover
      background #038fff
  &__top
    display flex
    justify-content flex-end
    padding-right 20px
    .dropdown__id
      padding 5px 19px 0 0 
  &__middle
    display flex
    justify-content flex-start
    font-weight 300
    font-size 40px
    color $white
    line-height 50px
    text-transform uppercase
  &__top
    font-size 15px
    font-weight 700
    line-height 25px
    text-transform uppercase
  &__balance
    font-weight 700
    font-size 15px
    color #ffffff
    line-height 25px
    text-transform uppercase
  
.choose
  background #eef4f7
  padding 60px 0
  &__items
    display flex
    justify-content space-between
    border-radius 6px 6px 0 0
    overflow hidden
    box-shadow 0 20px 50px rgba(49, 87, 125, 0.2)
  &__title
    font-weight 700
    font-size 20px
    color #ffffff
    line-height 25px
    text-transform uppercase
    padding 23px 10px
    text-align center
  &__list
    padding 38px 25px
    background $white
    min-height 226px
    position relative
    li
      font-weight 300
      font-size 20px
      color #020610
      line-height 50px
      position relative
      padding-left 30px
      &:before 
        content ''
        position absolute
        top 24px
        left 3px
        width 6px
        height 6px
        border-radius 50%
        background $blue
  &__item
    width 33.3333%
    &.active
      .choose__list
        position relative
        &:after
          content ''
          position absolute
          background-image url(../img/arrowactive.svg)
          width 42px
          height 18px
          transform translateX(-50%)
          left 50%
          top -17px



