.dropdown
  position relative
  max-width 500px
  width 100%
  margin 0 auto
  z-index 2
  text-align left
  &__wrapper
    margin 40px 0 0
  &__toggle 
    transition 0.5s
    cursor pointer
    .dropdown
      &__item
        &:after
          content ''
          position absolute
          top 51%
          right 30px
          width 12px
          height 8px
          background-image url(../img/arrow.png)
  &__list
    margin 0
    padding 0
    list-style-type none
    transform perspective(400px) rotateX(-90deg)
    transform-origin top
    transition 0.5s
    background $blue
    position absolute
    width 100%
  &.active
    .dropdown
      &__toggle
        color $blue
      &__list 
        transform rotate(0)
  &__item
    background $blue
    color #ffffff
    border-radius 5px
    padding 10px 18px 11px 18px
    transition all .3s ease
    cursor pointer
    position relative
    &:hover
      background #038fff
  &__top
    display flex
    justify-content flex-end
    padding-right 20px
    .dropdown__id
      padding 5px 19px 0 0 
  &__middle
    display flex
    justify-content flex-start
    font-weight 300
    font-size 40px
    color $white
    line-height 50px
    text-transform uppercase
  &__top
    font-size 15px
    font-weight 700
    line-height 25px
    text-transform uppercase
  &__balance
    font-weight 700
    font-size 15px
    color #ffffff
    line-height 25px
    text-transform uppercase
  
.choose
  background #eef4f7
  padding 60px 0 78px
  &__items
    display flex
    justify-content space-between
    border-radius 6px 6px 0 0
    overflow hidden
    box-shadow 0 20px 50px rgba(49, 87, 125, 0.2)
  &__title
    font-weight 700
    font-size 20px
    color #ffffff
    line-height 25px
    text-transform uppercase
    padding 23px 10px
    text-align center
  &__list
    padding 38px 25px
    background $white
    min-height 226px
    position relative
    li
      font-weight 300
      font-size 20px
      color #020610
      line-height 50px
      position relative
      padding-left 30px
      &:before 
        content ''
        position absolute
        top 24px
        left 3px
        width 6px
        height 6px
        border-radius 50%
        background $blue
  &__item
    width 33.3333%
    &.active
      .choose__list
        position relative
        &:after
          content ''
          position absolute
          background-image url(../img/arrowactive.svg)
          width 42px
          height 18px
          transform translateX(-50%)
          left 50%
          top -17px
  &__slider
    &-wrapper 
      margin 90px 0 40px
  &__inputs
    display flex
    justify-content space-between
    margin 44px 0 30px
    font-weight 300
    font-size 35px
    color $black
    line-height 45px
    text-transform uppercase
    align-items flex-start
    input 
      border-radius 5px
      background-color #ffffff
      font-weight 300
      font-size 35px
      color $black
      line-height 45px
      padding 12px 18px 6px
      letter-spacing 2px
      appearance none
      border none 
      outline none 
      font-family $default-font
  &__subtitle
    font-weight 300
    font-size 20px
    color $gray-3
    line-height 35px
    text-transform none
  &__input
    &-wrapper 
      input
        max-width 150px
  &__deposit 
    margin-right 10px
    &-wrapper 
      margin-top 38px
  &__btns
    display flex
    justify-content space-between
    input 
      max-width 180px
  &__btn 
    border-radius 5px
    background-color $blue
    font-weight 700
    font-size 20px
    color #ffffff
    line-height 25px
    text-transform uppercase
    display flex
    align-items center 
    justify-content center 
    padding 5px 40px
    &-margin 
      margin-left 10px
  &__value 
    margin-top 13px
  &__policy-wrapper
    a 
      font-weight 300
      font-size 20px
      color $blue
      line-height 30px
      text-decoration underline
      &:hover
        text-decoration none
  &__methods
    display flex
    justify-content space-between
    margin-top 32px
  &__method
    width 20%
    background $white 
    display flex
    flex-direction column 
    align-items center 
    justify-content center
    padding 30px 15px
    border-radius 4px
    position relative
    &:not(:first-child)
      border-left 2px solid #eef4f7
    &.active
      box-shadow 0 20px 50px rgba(49, 87, 125, 0.25)
      &:after
        position absolute
        content ''
        background-image url(../img/arrowactive.svg)
        width 42px
        height 18px
        transform translateX(-50%) rotate(180deg)
        left 50%
        bottom -17px
  &__last
    font-weight 300
    font-size 35px
    color $black
    line-height 45px
    margin-top 12px
  &__submit
    &-wrapper
      display flex
      align-items flex-start
      margin-top 28px
  &__second
    margin-top 80px
  &__info
    font-weight 300
    font-size 20px
    color #020610
    line-height 30px
    margin-left 40px
    a 
      color $blue
      text-decoration underline
      &:hover
        text-decoration none

.bonus
  background-color #f99400
  border-radius 1px
  color $white
  font-weight 700
  font-size 18px
  color #ffffff
  width 100%
  max-width 153px
  text-align center
  margin-top 7px
  line-height 25px

button[type="submit"]
  font-weight 700
  font-size 20px
  color #ffffff
  line-height 25px
  text-transform uppercase
  border-radius 5px
  background-color $blue
  max-width 300px
  width 100%
  appearance none
  border none 
  font-family $default-font
  padding 16px 10px
