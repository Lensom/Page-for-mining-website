.wrapper
    padding 0 15px
    width 100%
    max-width 1190px
    margin 0 auto
    position relative

.title
    font-weight 300
    font-size 50px
    color $black
    line-height 60px

.subtitle
    font-weight 300
    font-size 40px
    color $black
    line-height 50px
    display flex

.number
    font-weight 700
    font-size 25px
    color $white
    line-height 40px
    background $blue
    width 50px
    height 50px
    border-radius 50%
    display inline-flex
    align-items center
    justify-content center
    margin-right 24px

.bronze
    .choose__title
        background $brown
.silver
    .choose__title
        background $gray-2
.gold
    .choose__title
        background $gold

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
  -webkit-appearance none
  margin 0

input[type=number]
  -moz-appearance textfield
